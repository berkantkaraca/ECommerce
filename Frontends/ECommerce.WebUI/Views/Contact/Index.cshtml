					</div>

					<div class="form-group col-lg-6">
						<label class="form-label mb-1 text-2">Email</label>
						<input type="email" asp-for="Email" value="" data-msg-required="Please enter your email address." data-msg-email="Please enter a valid email address." maxlength="100" class="form-control text-3 h-auto py-2" name="email" required>
					</div>
				</div>
				<div class="row">
					<div class="form-group col">
						<label class="form-label mb-1 text-2">Konu</label>
						<input type="text" asp-for="Subject" value="" data-msg-required="Please enter the subject." maxlength="100" class="form-control text-3 h-auto py-2" name="subject" required>
					</div>
				</div>
				<div class="row">
					<div class="form-group col">
						<label class="form-label mb-1 text-2">Mesaj</label>
						<textarea maxlength="5000" asp-for="Message" data-msg-required="Please enter your message." rows="8" class="form-control text-3 h-auto py-2" name="message" required></textarea>
					</div>
				</div>
				<div class="row">
					<div class="form-group col">
						<input type="submit" value="Gönder" class="btn btn-primary btn-modern" data-loading-text="Loading...">
                        <button type="submit">Send Message</button>
					</div>
				</div>
			</form>

