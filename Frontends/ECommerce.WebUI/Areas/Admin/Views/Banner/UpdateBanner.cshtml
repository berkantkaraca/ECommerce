@model UpdateBannerDto
@{
    ViewData["Title"] = "UpdateBanner";
    Layout = "~/Areas/Admin/Views/Admin/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col">
        <section class="card">
            <div class="card-body">
                <form method="post">
                    <input type="hidden" asp-for="BannerId" />

                    <label>Görsel Başlığı</label>
                    <input type="text" asp-for="Title" class="form-control" />
                    <br />

                    <label>Açıklama</label>
                    <input type="text" asp-for="Description" class="form-control" />
                    <br />

                    <label>Link</label>
                    <input type="text" asp-for="ImageUrl" class="form-control" />
                    <br />

                    <button type="submit" class="btn btn-primary">Güncelle</button>
                </form>

            </div>
        </section>
    </div>
</div>