@model List<ResultBannerDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Admin/_AdminLayout.cshtml";
	int count = 0;
}

<div class="card-body">
	<table class="table table-bordered table-striped mb-0" id="datatable-editable">
		<thead>
			<tr>
				<th>#</th>
				<th>Göresel Başlığı</th>
				<th>Açıklama</th>
				<th>Sil</th>
				<th>Güncelle</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				count++;
				<tr data-item-id="@count">
					<th>@count</th>
					<td>@item.Title</td>
					<td>@item.Description</td>
					<td class="actions">
						<a href="DeleteBanner/@item.BannerId" class="on-default remove-row"><i class="far fa-trash-alt"></i></a>
					</td>
					<td class="actions">
						<a href="UpdateBanner/@item.BannerId" class="on-default edit-row"><i class="fas fa-pencil-alt"></i></a>
					</td>
				</tr>
			}
		</tbody>
	</table>

	<div class="row mt-3">
		<div class="col-sm-6">
			<div class="mb-3">
				<a href="CreateBanner" id="addToTable" class="btn btn-primary">Yeni Banner Ekle <i class="fas fa-plus"></i></a>
			</div>
		</div>
	</div>
</div>