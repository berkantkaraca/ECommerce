@model UpdateFeatureDto
@{
    ViewData["Title"] = "UpdateFeature";
    Layout = "~/Areas/Admin/Views/Admin/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col">
        <section class="card">
            <div class="card-body">
                <form method="post">
                    <input type="hidden" asp-for="FeatureId" class="form-control" />

                    <label>Özellik Adı</label>
                    <input type="text" asp-for="Title" class="form-control" />
                    <br />

                    <label>İkon</label>
                    <input type="text" asp-for="Icon" class="form-control" />
                    <br />

                    <button type="submit" class="btn btn-primary">Güncelle</button>
                </form>
            </div>
        </section>
    </div>
</div>