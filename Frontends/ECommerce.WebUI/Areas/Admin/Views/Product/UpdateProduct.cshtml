@model UpdateProductDto
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Areas/Admin/Views/Admin/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col">
        <section class="card">
            <div class="card-body">
                <form method="post">
                    <input type="hidden" asp-for="ProductId" />

                    <label>Ürün Adı</label>
                    <input type="text" asp-for="ProductName" class="form-control" />
                    <br />

                    <label>Fiyat</label>
                    <input type="text" asp-for="ProductPrice" class="form-control" />
                    <br />

                    <label>Görsel</label>
                    <input type="text" asp-for="ProductImageUrl" class="form-control" />
                    <br />

                    <label>Kategori</label>
                    @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.Categories, new { @class = "form-control" })
                    <br />

                    <label>Açıklama</label>
                    <textarea asp-for="ProductDescription" rows="5" class="form-control"></textarea>
                    <br />

                    <button type="submit" class="btn btn-primary">Güncelle</button>
                </form>
            </div>
        </section>
    </div>
</div>