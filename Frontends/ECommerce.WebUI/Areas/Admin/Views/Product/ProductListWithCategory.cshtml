@model List<ResultProductWithCategoryDto>

@{
    ViewData["Title"] = "ProductListWithCategory";
    Layout = "~/Areas/Admin/Views/Admin/_AdminLayout.cshtml";
	int count = 0;
}

<div class="card-body">
	<table class="table table-bordered table-striped mb-0" id="datatable-editable">
		<thead>
			<tr>
				<th>#</th>
				<th>Ürün Adı</th>
				<th>Fiyat</th>
				<th>Kategori</th>
				<th>Ürün Görselleri</th>
				<th>Ürün Detayları</th>
				<th>Sil</th>
				<th>Güncelle</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				count++;
				<tr data-item-id="@count">
					<th>@count</th>
					<td>@item.ProductName</td>
					<td>@item.ProductPrice.ToString("N2")</td>
					<td>@item.Category.CategoryName</td>
					<td class="actions"><a href="ProductImages/@item.ProductId" class="on-default remove-row"><i class="fa-solid fa-images"></i></a></td>
					<td class="actions"><a href="UpdateProductDetail/@item.ProductId" class="on-default remove-row"><i class="fa fa-pencil-square"></i></a></td>
					<td class="actions">
						<a href="DeleteProduct/@item.ProductId" class="on-default remove-row"><i class="far fa-trash-alt"></i></a>
					</td>
					<td class="actions">
						<a href="UpdateProduct/@item.ProductId" class="on-default edit-row"><i class="fas fa-pencil-alt"></i></a>
					</td>
				</tr>
			}
		</tbody>
	</table>

	<div class="row mt-3">
		<div class="col-sm-6">
			<div class="mb-3">
				<a href="CreateProduct" id="addToTable" class="btn btn-primary">Yeni Ürün Ekle <i class="fas fa-plus"></i></a>
			</div>
		</div>
	</div>
</div>