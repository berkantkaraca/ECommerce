@model List<ResultBrandDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Admin/_AdminLayout.cshtml";
    int count = 0;
}

<div class="card-body">
    <table class="table table-bordered table-striped mb-0" id="datatable-editable">
        <thead>
            <tr>
                <th>#</th>
                <th>Marka Adı</th>
                <th>Resim Url</th>
                <th>Sil</th>
                <th>Güncelle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr data-item-id="@count">
                    <th>@count</th>
                    <td>@item.BrandName</td>
                    @* <td>@item.ImageUrl</td> *@
                    <td><img src="@item.ImageUrl" style="width:50px; height:50px;" /> </td>
                    <td class="actions"><a href="DeleteBrand/@item.BrandId" class="on-default remove-row"><i class="far fa-trash-alt"></i></a></td>
                    <td class="actions"><a href="UpdateBrand/@item.BrandId" class="on-default edit-row"><i class="fas fa-pencil-alt"></i></a></td>
                </tr>
            }
        </tbody>
    </table>

    <div class="row mt-3">
        <div class="col-sm-6">
            <div class="mb-3">
                <a href="CreateBrand" id="addToTable" class="btn btn-primary">Yeni Marka Ekle <i class="fas fa-plus"></i></a>
            </div>
        </div>
    </div>
</div>