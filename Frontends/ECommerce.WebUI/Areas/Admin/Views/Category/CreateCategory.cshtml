@model CreateCategoryDto
@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Areas/Admin/Views/Admin/_AdminLayout.cshtml";
}

<div class="row">
	<div class="col">
		<section class="card">
			<div class="card-body">
                <form method="post">
                    <label>Kategori Adı</label>
                    <input type="text" asp-for="CategoryName" class="form-control" />
                    <br />
                    <button type="submit" class="btn btn-primary">Ekle</button>
                </form>
			</div>
		</section>
	</div>
</div>